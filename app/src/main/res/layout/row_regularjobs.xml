<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_dark"
                />

            <LinearLayout
                android:id="@+id/relative_list_items"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#cccccc"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"

                    >

                    <ImageView
                        android:id="@+id/child_flag"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:background="@drawable/childflag"
                        />
                    <ImageView
                        android:id="@+id/smoke_flag"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:background="@drawable/smokeflag"
                        />
                    <ImageView
                        android:id="@+id/pet_flag"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:background="@drawable/pawflag"
                        />
                    <ImageView
                        android:id="@+id/cat_flag"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:background="@drawable/catflag"

                        />


                    <ImageView
                        android:id="@+id/dialysis_flag"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dialysisflag"
                        />

                    <ImageView
                        android:id="@+id/numpeople_flag"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/oneperson"
                        />

</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="21dp"
                            android:background="@drawable/green_marker"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            />
                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="60dp"
                            android:background="@drawable/line"
                            android:layout_marginLeft="5dp"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="21dp"
                            android:background="@drawable/red_marker"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        >

                        <TextView
                            android:id="@+id/tv_pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="45 e 50th Street, Brooklyn, NY 45 e 50th Street, Brooklyn, NY"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/tv_pickup_between"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PickUp Betsween"
                            android:singleLine="true"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_dropoff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:text="45 e 50th Street, Brooklyn, NY 45 e 50th Street, Brooklyn, NY"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_reject"
                        android:layout_width="170dp"
                        android:layout_height="49dp"
                        android:background="@drawable/reject"
                        android:layout_weight="1"
                        android:text="Reject"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        />

                    <Button
                        android:id="@+id/btn_accept"
                        android:layout_width="170dp"
                        android:layout_height="49dp"
                        android:text="Accept"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/accept"
                        android:layout_weight="1"
                        />


                </LinearLayout>
            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black"
                    />
</LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
